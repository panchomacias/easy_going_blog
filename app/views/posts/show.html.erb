<div class="w-full min-h[100vh] flex flex-col items-center">
  <h1 class="font-bold text-lg bg-sky-100"><%= @post.title %></h1>
</div>

<div class="flex flex-col items-center mt-8 sm:mx-auto sm:w-full sm:max-w-3xl">
  <div class="text-center"><%= @post.content %></div>
</div>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "New", new_post_path(@post) %>
<%= link_to "Delete", post_path(@post), data: {
  turbo_method: :delete, turbo_confirm: "Are you sure?"
} %>
