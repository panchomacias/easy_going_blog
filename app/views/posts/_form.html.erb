<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-xl">
  <div class="space-y-6">
    <%= form_with model: @post do |f| %>

      <%= f.label :title, class: "block text-sm font-medium mt-3" %>
      <div class="mt-2 relative rounded-md shadow-sm">
        <%= f.text_field :title, class:"block w-full border rounded shadow-md" %>
      </div>

      <div>
        <%= f.label :content, class: "block text-sm font-medium mt-3" %>
        <%= f.text_area :content, rows: 15, class: "block w-full border rounded shadow-md" %>
      </div>

      <div>
        <%= f.label :status, class:"block text-sm font-medium mt-3" %>
        <%= f.text_field :status, class:"block w-full border rounded shadow-md" %>
      </div>

      <div>
        <%= f.submit class:"mt-3 bg-sky-300 p-1.5 rounded-lg hover:bg-gray-300 hover:transition-all" %>
      </div>
    <% end %>
  </div>
</div>


